from typing import List

class Solution:
    # Using Linear Search 
    def searchInsertL(self, nums: List[int], target: int) -> int:
        for i in range(len(nums)):
            if target <= nums[i]:
                return i
        return len(nums)
    
    # Using Binary Search
    def searchInsertB(self, nums: List[int], target: int) -> int:
        left, right = 0, len(nums)-1
        while left <= right:
            mid = (left + right) // 2

            if nums[mid] == target:
                return mid
            elif nums[mid] < target:
                left = mid + 1
            else:
                right = mid - 1
                
        return left
Ob = Solution()
print(Ob.searchInsertL([1,3,5,7], 2))
print(Ob.searchInsertB([1,3,5,7], 10))